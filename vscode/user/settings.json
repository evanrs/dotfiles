{
  "editor.fontFamily": "Native, Fira Code, Menlo, monospace",
  "editor.fontSize": 18,
  "editor.letterSpacing": -1.62,
  "editor.fontFamily": "FiraCode-Retina, Fira Code, Menlo, monospace",
  "editor.fontSize": 16,
  "editor.letterSpacing": -1.02,
  // "editor.letterSpacing": -1.22,
  "editor.lineHeight": 24,
  "editor.fontLigatures": true,
  "editor.renderLineHighlight": "all",
  "editor.tabSize": 2,
  "workbench.colorTheme": "Loyal Light (rainglow)",
  // keep windows open
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.restoreViewState": true,
  "search.useReplacePreview": true,
  //
  // get rid of the extras
  //
  "workbench.activityBar.visible": false,
  "editor.renderIndentGuides": false,
  "scm.diffDecorationsGutterWidth": 1,
  "editor.minimap.enabled": false,
  "git.decorations.enabled": false,
  "editor.glyphMargin": false,
  "workbench.statusBar.visible": true,
  "workbench.statusBar.feedback.visible": false,
  "editor.lineDecorationsWidth": 0, // undocumented
  "editor.lineNumbersMinChars": 2, // undocumented
  "workbench.commandPalette.history": 200,
  "workbench.commandPalette.preserveInput": true,
  "editor.formatOnPaste": false,
  "atomKeymap.promptV3Features": true,
  "explorer.confirmDelete": false,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.suggest.localityBonus": true,
  "editor.suggestFontSize": 12,
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.suggestOnTriggerCharacters": false,
  "breadcrumbs.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "terminal.integrated.enableBell": false,
  // "prettier.eslintIntegration": false,
  "workbench.settings.openDefaultSettings": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.wrappingIndent": "deepIndent",
  "peacock.affectActivityBar": true,
  "peacock.affectStatusBar": true,
  // search
  "search.exclude": {
    "**/build": true,
    "**/dist": true,
    "**/lib": true
  },
  // "search.location": "panel",
  "search.smartCase": true,
  "search.useGlobalIgnoreFiles": true,
  "search.usePCRE2": true,
  "workbench.editor.enablePreview": false,
  "workbench.editor.swipeToNavigate": true,
  // creating files
  "advancedNewFile.convenienceOptions": [
    "current",
    "last",
    "root"
  ],
  "peacock.favoriteColors": [
    {
      "name": "flex-peach",
      "value": "#FDEEE6",
    },
    {
      "name": "flex-orange",
      "value": "#E09A48",
    },
    {
      "name": "flex-seafoam",
      "value": "#BACFDA",
    },
    {
      "name": "flex-teal",
      "value": "#347881",
    },
    {
      "name": "Angular Red",
      "value": "#b52e31"
    },
    {
      "name": "Auth0 Orange",
      "value": "#eb5424"
    },
    {
      "name": "Azure Blue",
      "value": "#007fff"
    },
    {
      "name": "C# Purple",
      "value": "#68217A"
    },
    {
      "name": "Gatsby Purple",
      "value": "#639"
    },
    {
      "name": "Go Cyan",
      "value": "#5dc9e2"
    },
    {
      "name": "Java Blue-Gray",
      "value": "#557c9b"
    },
    {
      "name": "JavaScript Yellow",
      "value": "#f9e64f"
    },
    {
      "name": "Mandalorian Blue",
      "value": "#1857a4"
    },
    {
      "name": "Node Green",
      "value": "#215732"
    },
    {
      "name": "React Blue",
      "value": "#00b3e6"
    },
    {
      "name": "Something Different",
      "value": "#832561"
    },
    {
      "name": "Vue Green",
      "value": "#42b883"
    },
    {
      "name": "Prisma Violet",
      "value": "rgb(159, 107, 244)"
    },
    {
      "name": "Glom Glam Violet",
      "value": "#AE81FF"
    },
    {
      "name": "Glom Glam Red",
      "value": "#F92672"
    },
    {
      "name": "Gloom Glam Pink",
      "value": "#F5AAFD"
    }
  ],
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "window.restoreWindows": "all",
  "window.title": "${rootName}${separator}${activeEditorShort}",
  "window.newWindowDimensions": "inherit",
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "flow.logLevel": "error",
  "debug.internalConsoleOptions": "neverOpen",
  "comments.openPanel": "neverOpen",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.associations": {
    "*.jenkinsfile": "groovy"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.exclude": {
    "**/dist": true,
    // "**/lib": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "workbench.startupEditor": "none",
  "files.insertFinalNewline": true,
  "[java]": {
    "editor.formatOnSave": false
  },
  "git.autofetch": true,
  "editor.formatOnSave": true,
  "extensions.ignoreRecommendations": false,
  "terminal.integrated.allowWorkspaceConfiguration": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorWidth": 3,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.tabCloseButton": "off",
  "terminal.integrated.commandsToSkipShell": [
    "workbench.action.switchWindow",
    "workbench.action.terminal.resizePaneLeft",
    "workbench.action.terminal.resizePaneRight",
    "workbench.action.terminal.resizePaneUp",
    "workbench.action.terminal.resizePaneDown"
  ],
  "terminal.integrated.tabs.location": "left",
  "workbench.editorAssociations": [
    {
      "viewType": "jupyter.notebook.ipynb",
      "filenamePattern": "*.ipynb"
    }
  ],
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.sideBar.location": "right",
  "window.zoomLevel": 1
}
